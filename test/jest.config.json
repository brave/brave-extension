{
  "preset": "ts-jest",
  "moduleFileExtensions": [
    "js",
    "tsx",
    "ts",
    "json"
  ],
  "transform": {
    ".(jsx|js|ts|tsx)": "ts-jest"
  },
  "resetMocks": true,
  "resetModules": true,
  "collectCoverage": false,
  "collectCoverageFrom": [
    "<rootDir>/app/**/**/*.{ts, tsx}",
    "!<rootDir>/app/assets/*",
    "!<rootDir>/app/constants/*",
    "!<rootDir>/app/types/**/*"
  ],
  "testMatch": [
    "<rootDir>/app/actions/*.{ts, tsx}"
  ],
  "transformIgnorePatterns": [
    "<rootDir>/node_modules"
  ],
  "setupTestFrameworkScriptFile": "./setupApp.ts",
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|svg|ttf|woff|woff2)$": "<rootDir>/test/fileMock.ts",
    "\\.(css|less)$": "identity-obj-proxy"
  }
}
